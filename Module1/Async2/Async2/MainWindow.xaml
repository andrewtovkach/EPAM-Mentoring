        xmlns:local="clr-namespace:Async2"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Loaded="Grid_Loaded">
        <Image Name="loadingImage" gif:ImageBehavior.AnimatedSource="loading_apple.gif" Width="100" Height="100"/>
        <Label Name="tasksCountLabel" Content="" HorizontalAlignment="Left" Margin="149,230,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Arial Black"/>
